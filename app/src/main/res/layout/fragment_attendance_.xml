<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- Month Navigation -->
    <LinearLayout
        android:id="@+id/month_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/prev_month"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_arrow_left"
            android:contentDescription="Previous Month"
            app:tint="#3F51B5"
            android:padding="8dp" />

        <TextView
            android:id="@+id/month_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="8dp"
            android:text="December 2024"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/next_month"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_arrow_right"
            android:contentDescription="Next Month"
            app:tint="#3F51B5"
            android:padding="8dp" />
    </LinearLayout>

    <!-- Calendar RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/calendar_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@id/month_navigation"
        android:clipToPadding="false"
        android:padding="5dp"
        android:background="#FFFFFF"
        android:elevation="4dp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="10" />

    <!-- Attendance Summary -->
    <LinearLayout
        android:id="@+id/attendance_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:padding="16dp">

        <TextView
            android:id="@+id/summary_present"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Present: 20"
            android:textColor="#4CAF50"
            android:textSize="16sp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/summary_absent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Absent: 5"
            android:textColor="#F44336"
            android:textSize="16sp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/summary_holidays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Holidays: 6"
            android:textColor="#9E9E9E"
            android:textSize="16sp"
            android:layout_weight="1" />
    </LinearLayout>
</RelativeLayout>
